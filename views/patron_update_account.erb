<h1>Edit Your Account Information </h1>

<form action="/patron/patrons/<%= @patron.patron_id()%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
  </div>
  <div class="form-group">
    <label for="phone">Phone Number:</label>
    <input type="text" name="phone" id="phone">
  </div>
  <button type="submit">Submit</button>
</form>
<br>

<form action="/patron/patrons/<%= @patron.patron_id()%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Patron</button>
</form>
<br>
<a href="/patron/patrons/<%= @patron.patron_id() %>"><button type="button" >Back to <%= @patron.name() %></button></a>
